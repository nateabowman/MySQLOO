{
  "version": 3,
  "configurePresets": [
    {
      "name": "vcpkg-base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "FILEPATH",
          "value": "$env{USERPROFILE}/vcpkg/scripts/buildsystems/vcpkg.cmake"
        },
        "VCPKG_ROOT": {
          "type": "PATH",
          "value": "$env{USERPROFILE}/vcpkg"
        }
      },
      "environment": {
        "VCPKG_ROOT": "$env{USERPROFILE}/vcpkg"
      }
    },
    {
      "name": "windows-x86-release",
      "displayName": "Windows x86 Release",
      "inherits": "vcpkg-base",
      "generator": "Visual Studio 18 2026",
      "architecture": {
        "value": "Win32",
        "strategy": "set"
      },
      "binaryDir": "${sourceDir}/cmake-build-x86-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "VCPKG_TARGET_TRIPLET": "x86-windows-static",
        "CMAKE_VS_INCLUDE_BUILD_INSIGHTS": "OFF"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "windows-x64-release",
      "displayName": "Windows x64 Release",
      "inherits": "vcpkg-base",
      "generator": "Ninja",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "binaryDir": "${sourceDir}/cmake-build-x64-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "VCPKG_TARGET_TRIPLET": "x64-windows-static"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "linux-x86-release",
      "displayName": "Linux x86 Release",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/cmake-build-x86-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "FILEPATH",
          "value": "$env{HOME}/vcpkg/scripts/buildsystems/vcpkg.cmake"
        },
        "VCPKG_ROOT": {
          "type": "PATH",
          "value": "$env{HOME}/vcpkg"
        },
        "VCPKG_TARGET_TRIPLET": "x86-linux"
      },
      "environment": {
        "VCPKG_ROOT": "$env{HOME}/vcpkg"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "linux-x64-release",
      "displayName": "Linux x64 Release",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/cmake-build-x64-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "FILEPATH",
          "value": "$env{HOME}/vcpkg/scripts/buildsystems/vcpkg.cmake"
        },
        "VCPKG_ROOT": {
          "type": "PATH",
          "value": "$env{HOME}/vcpkg"
        },
        "VCPKG_TARGET_TRIPLET": "x64-linux"
      },
      "environment": {
        "VCPKG_ROOT": "$env{HOME}/vcpkg"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "windows-x86-release",
      "configurePreset": "windows-x86-release"
    },
    {
      "name": "windows-x64-release",
      "configurePreset": "windows-x64-release"
    },
    {
      "name": "linux-x86-release",
      "configurePreset": "linux-x86-release"
    },
    {
      "name": "linux-x64-release",
      "configurePreset": "linux-x64-release"
    }
  ]
}
